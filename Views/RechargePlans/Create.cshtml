@model mobile_recharger.Models.RechargePlan

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>RechargePlan</h4>
<hr />
<style>
    .form-control {
        -webkit-box-shadow: none !important;
        outline: -webkit-focus-ring-color auto 0px !important;
    }

    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type=number] {
        -moz-appearance: textfield;
    }
</style>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="flex-column mt-2">
                    <label asp-for="Price" class="control-label mx-2"></label>
                    <input asp-for="Price" type="number" class="form-control  border-0 border-bottom border-primary" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Validity" class="control-label mx-2"></label>
                <input asp-for="Validity" class="form-control border-0 border-bottom" type="number" />
                <span asp-validation-for="Validity" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="CategoryId" class="control-label "></label>
                <select asp-for="CategoryId" class="form-control mt-2 " asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group m-2">
                <input type="submit" value="Create" class="btn btn-primary m-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

